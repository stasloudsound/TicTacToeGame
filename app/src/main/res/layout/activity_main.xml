<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


 <TableLayout
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_centerInParent="true">

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

   <Button
       android:id="@+id/button1"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn1_click"
       android:textSize="40sp" />

   <Button
       android:id="@+id/button2"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn2_click"
       android:textSize="40sp" />

   <Button
       android:id="@+id/button3"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn3_click"
       android:textSize="40sp" />
  </TableRow>

  <TableRow
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

   <Button
       android:id="@+id/button4"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn4_click"
       android:textSize="40sp" />

   <Button
       android:id="@+id/button5"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn5_click"
       android:textSize="40sp" />

   <Button
       android:id="@+id/button6"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn6_click"
       android:textSize="40sp" />
  </TableRow>

  <TableRow
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

   <Button
       android:id="@+id/button7"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn7_click"
       android:textSize="40sp" />

   <Button
       android:id="@+id/button8"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn8_click"
       android:textSize="40sp" />

   <Button
       android:id="@+id/button9"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       android:onClick="btn9_click"
       android:textSize="40sp" />
  </TableRow>
 </TableLayout>

 <Button
     android:id="@+id/restart"
     android:layout_width="120dp"
     android:layout_height="120dp"
     android:layout_centerHorizontal="true"
     android:text="RESTART"
     android:textSize="16dp"
     android:layout_margin="500dp"
     android:onClick="onClickRestart"
      />

<TextView
 android:id="@+id/textView"
 android:layout_centerHorizontal="true"
 android:layout_margin="420dp"
    android:textSize="40dp"
 android:text="Ð¡oming game.."
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"/>
</RelativeLayout>